<!DOCTYPE html>
<html lang="pt">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/index.css">
    <title>Ficha Virtual</title>
</head>

<body>
    <div class="navbar">
        <a class="image-link" href="/profile">
            <img class="profile-image"
                src="https://cdn.discordapp.com/attachments/890557408114520095/1004573933070192671/unknown.png">
        </a>
        <div class="right-navbar">
            <div class="sidebar-button" id="sidebarButton" onclick="sidebarToggle()">
                {{#with user}}
                <div class="top-bar"></div>
                <div class="mid-bar"></div>
                <div class="bottom-bar"></div>
                {{/with}}
            </div>
        </div>
    </div>
    {{#with user}}
    <div class="sidebar" id="sidebar">
        <p>Usuário: {{displayName}}</p>
        <p>Saldo: R$</p>
        <a href="/carrinho">
            <p>Carrinho</p><img id="cart"
                src="https://img.icons8.com/material-outlined/520/788a9c/shopping-cart--v1.png" />
        </a>
    </div>
    {{/with}}
    <div class="main-div">
        <div class="items">
            {{#each itens.comidas}}
            <div class="item">
                <div class="item-image">
                    <img src="{{imagem}}" class="image">
                </div>
                <div class="item-footer">
                    <div class="item-info">
                        <h3>{{nome}}</h3>
                        <p>{{preço}}</p>
                    </div>
                    <button class="cart-button"><img class="cart-image"
                            src="https://img.icons8.com/material-rounded/48/788a9c/buy.png" /></button>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="items">
            {{#each itens.bebidas}}
            <div class="item">
                <div class="item-image">
                    <img src="{{imagem}}" class="image">
                </div>
                <div class="item-footer">
                    <div class="item-info">
                        <h3>{{nome}}</h3>
                        <p>{{preço}}</p>
                    </div>
                    <button class="cart-button"><img class="cart-image"
                            src="https://img.icons8.com/material-rounded/48/788a9c/buy.png" /></button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</body>


<style>

    .cart-image {
        width: 24px;
        height: 24px;
    }

    .cart-button {
        right: 0;
        width: 30px;
        height: 100%;
        background-color: #022341;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .item-footer {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: center;
    }

    .items {
        position: relative;
        width: 90vw;
        height: 200px;
        margin-top: 2vh;
        display: flex;
        overflow-y: hidden;
        overflow-x: auto;
    }

    .item {
        height: 200px;
        width: 150px;
        min-width: 150px;
        display: inline-flex;
        flex-direction: column;
        align-items: center;
        padding: 2vh 2vw;
    }

    .image {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    .item-image {
        height: 150px;
        width: 150px;
        top: 0;
    }

    .item-info {
        height: 100%;
        width: 120px;
        display: flex;
        flex-direction: column;
        flex-wrap: wrap;
        background-color: #fff;
    }

    .item-info h3 {
        font-size: 0.8em;
        max-width: 200px;
        margin: 0 0.5em;
    }

    .item-info p {
        font-size: 0.6em;
        margin: 0 0 0 1em;
    }

    body {
        position: relative;
        width: 100vw;
        overflow-y: auto;
        overflow-x: hidden;
        background-color: #788a9c;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .navbar {
        width: 100%;
        height: 10vh;
        background-color: #022341;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: left;
    }

    .profile-image {
        width: 40px;
        height: 40px;
        border-radius: 50%;
    }

    .image-link {
        height: 40px;
        width: 40px;
        margin-left: 10px;
    }

    .right-navbar {
        width: 100%;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: right;
    }

    .sidebar-button {
        width: 40px;
        height: 40px;
        margin-right: 10px;
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        background-color: #022341;
    }

    .top-bar {
        width: 70%;
        height: 3px;
        background: #788a9c;
        border-radius: 20px;
    }

    .mid-bar {
        width: 70%;
        height: 3px;
        background: #788a9c;
        margin-top: 5px;
        border-radius: 20px;
    }

    .bottom-bar {
        width: 70%;
        height: 3px;
        background: #788a9c;
        margin-top: 5px;
        border-radius: 20px;
    }

    .sidebar {
        right: -70vw;
        top: 10vh;
        position: fixed;
        z-index: 3;
        background: #022341;
        height: 89.5vh;
        width: 60vw;
        max-width: 500px;
        border: 3px solid #01172b;
        border-radius: 10px 0px 0px 10px;
        color: #788a9c;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
    }

    .sidebar p {
        margin: 0.5em;
        text-shadow: 2px 2px 3px #000000;
    }

    .sidebar a {
        display: inline-flex;
        color: #788a9c;
        text-decoration: none;
    }

    #cart {
        width: 1.5em;
        height: 1.5em;
    }
</style>

<script>
    var isOpen = false;
    var sidebarButton = document.getElementById("sidebarButton");
    var sidebar = document.getElementById("sidebar");
    function sidebarToggle() {
        console.log("teste");
        if (isOpen) {
            sidebar.animate([{
                transform: 'translateX(-70vw)'
            }, {
                transform: 'translateX(0)'
            }], {
                duration: 1000,
                iterations: 1,
                direction: 'normal',
                fill: 'forwards',
                easing: 'ease-in-out'
            });
            sidebarButton.style.backgroundColor = "#022341";
            isOpen = false;
        } else {
            sidebar.animate([{
                transform: 'translateX(-70vw)'
            }, {
                transform: 'translateX(0)'
            }], {
                duration: 1000,
                iterations: 1,
                direction: 'reverse',
                fill: 'forwards',
                easing: 'ease-in-out'
            });
            sidebarButton.style.backgroundColor = "#011527";
            isOpen = true;
        }
    }
</script>

</html>